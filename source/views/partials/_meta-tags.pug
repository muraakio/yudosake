- var title = '中福酒廠';
- var description = '宜蘭縣第一家取得財政部國庫署製酒許可執照的廠商';
- var coverImage = './images/fb-og.jpg';

title #{title}

// html
meta(http-equiv='Content-type', content='text/html; charset=utf-8')
meta(name='viewport', content='width=device-width, initial-scale=1.0')
meta(http-equiv='X-UA-Compatible', content='IE=edge')
meta(name='author', content='yudo Member')
meta(name='copyright', content='yudo Taiwan')
meta(name='keywords', content='website, javascript, conference, developers, js, yudo, 2019')

// SEO meta 設定
meta(itemprop='name', content=title)
meta(itemprop='description', content=description)
meta(itemprop='image', content=coverImage)

// og 設定
meta(property='og:type', content='website')
meta(property='og:title', content=title)
meta(property='og:description', content=description)
meta(property='og:image', content=coverImage)
meta(property='og:url', content='http://2019.yudo.tw/')
meta(property='og:site_name', content='yudo 2019')

// twitter 設定
meta(name='twitter:card' content='summary_large_image')
meta(name='twitter:site' content='@yudo_tw')
meta(name='twitter:title' content=title)
meta(name='twitter:description' content=description)
meta(property='twitter:image', content=coverImage)
meta(property='twitter:creator', content='@yudo_tw')
link(href=coverImage rel='image_src' type='image/jpeg')
